<div class="container">
  <%= simple_form_for [@goat, @reservation] do |f| %>
    <%= f.input :location %>
    <%= f.input :start_date, as: :string, input_html: {type: :date} %>
    <%= f.input :end_date, as: :string, input_html: {type: :date} %>
    <%= f.submit "Book now", class: "btn btn-primary" %>
  <% end %>

</div>
